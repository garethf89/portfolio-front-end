{
  "compilerOptions": {
    "jsx": "preserve",
    "declaration": false,
    "removeComments": false,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2017",
      "es2019",
      "esnext",
      "dom"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "public",
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "typeRoots": [
      "./node_modules",
      "./node_modules/@types",
      "@types"
    ],
    "types": [
      "node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@containers": [
        "./src/containers"
      ],
      "@components": [
        "./src/components"
      ],
      "@queries": [
        "./src/queries"
      ],
      "@schema": [
        "./schema"
      ],
      "@types": [
        "./@types"
      ],
      "@storybook-home-dir/*": [
        "./.storybook/*"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@theme": [
        "./src/theme"
      ],
      "@styled-system/*": [
        "./src/styled-system/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/@chakra-ui/theme.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    "@types/index.ts",
    "panda.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}