{
    "compilerOptions": {
        "jsx": "react",
        "declaration": false,
        "removeComments": false,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2017", "es2019", "esnext", "dom"],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "public",
        "esModuleInterop": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "noUnusedLocals": false
    },
    "include": ["src/**/*.ts", "src/templates/project.tsx"]
}
